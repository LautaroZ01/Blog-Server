<!doctype html>
<html>
<head>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width,initial-scale=1">
<style>
  body { font-family: 'Helvetica', Arial, sans-serif; margin: 40px; color: #222; }
  h1 { font-size: 26px; margin-bottom: 10px; }
  h2 { margin-top: 40px; color: #333; }
  .meta { font-size: 12px; color: #777; margin-bottom: 20px; }
  .content { font-size: 14px; line-height: 1.6; }
  .section { margin-top: 40px; }
  .section img, .header-img img {
    max-width: 100%;
    border-radius: 10px;
    margin: 15px 0;
  }
  hr { border: none; border-top: 1px solid #ccc; margin: 40px 0; }
</style>
</head>
<body>

  {{#if headerImage}}
  <div class="header-img">
    <img src="{{headerImage}}" alt="Imagen principal">
  </div>
  {{/if}}

  <h1>{{title}}</h1>
  <div class="meta">
    Autor: {{authorName}} <br>
    Categoría: {{categoryName}} <br>
    Fecha: {{date}} — Tiempo de lectura: {{readTime}} min
  </div>

  <div class="content">
    {{{content}}}
  </div>

  {{#if sections.length}}
  <hr>
  {{#each sections}}
    <div class="section">
      {{#if thumbnail}}
      <img src="{{thumbnail}}" alt="{{title}}">
      {{/if}}
      <h2>{{title}}</h2>
      <div class="content">
        {{{content}}}
      </div>
    </div>
  {{/each}}
  {{/if}}

</body>
</html>
